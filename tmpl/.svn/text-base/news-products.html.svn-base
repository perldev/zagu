{%block content%}    	
<div id="cont_main_prod">     

        <div id="art_news_pr">    	
        <div id="prod_fulltext">

        <div id="art_news_title"><h2>{{current.title}}</h2></div>
        <div id="product_name">
        <h3>{{current.introtext}}</h3>
        </div>
        <div id="prod_fulltext"><p>{{current.text|safe}}</p></div>
	<div id="product">
	    <div id="product_img">
		  <a href="#">
			<img width="480" id="big_image" 
                             src="{{current.product_img}}"
                             data-zoom-image="{{current.product_img}}"
			>
		  </a>
	    </div>
	    <div id="color">
	    
	    {% for item in colors %}
		  <div class="col_img">
			<img width="128" class="button" onclick="change_img('{{MEDIA_URL}}{{item.path_thumb}}')" src="{{item.path}}" />
			<div id="color_name">{{item.title}}</div>
		  </div>
		  <img src="{{MEDIA_URL}}{{item.path_thumb}}" style="display:none">
	    {% endfor %}
	    
	    
    <!-- 	<div id="col_img"><div id="color_name">кость</div></div> -->
    <!--         <div id="col_img"><div id="color_name">Золотая осень</div></div> -->
    <!--         <div id="col_img"><div id="color_name">Свинцовый</div></div> -->
    <!--         <div id="col_img"><div id="color_name">Коричневая патина</div></div> -->
    <!--         <div id="col_img"><div id="color_name">Темный шоколад</div></div> -->
	    
	    
	    </div>
	</div>
</div>

        
        </div>
	<div id="inter">
                <img  width="339" 
                      id="zoom1" 
                      src="{{current.inter_img}}"
                      data-zoom-image="{{current.inter_img}}" /></div>
	</div>           
	<script>
	$("#zoom1").elevateZoom({tint:true, tintColour:'#F90', tintOpacity:0.5,zoomWindowPosition: 11});
        $("#big_image").elevateZoom({tint:true, tintColour:'#F90', tintOpacity:0.5});
	
	</script>
	
{%endblock%}

